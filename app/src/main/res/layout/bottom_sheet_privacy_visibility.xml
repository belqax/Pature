<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/privacyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_privacy_sheet_title_default"
            android:textSize="18sp"
            android:fontFamily="@font/nunitoblack"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/privacyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/profile_settings_privacy_sheet_description_default"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/profile_settings_privacy_sheet_visibility_label"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/privacyVisibilityChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVisibilityEveryone"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_privacy_visibility_everyone"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVisibilityMatchesOnly"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_privacy_visibility_matches_only" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVisibilityNobody"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_privacy_visibility_nobody" />
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/privacyCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_privacy_cancel"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/privacyApplyButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_privacy_apply"
                app:cornerRadius="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
