<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/bg_chat_item_ripple"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/eventIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_round_imagebutton_selector"
        android:padding="6dp"
        android:src="@drawable/ic_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?colorPrimary"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Новый контакт"
        android:textSize="15sp"
        android:fontFamily="@font/nunitoblack"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/eventIcon"
        app:layout_constraintTop_toTopOf="@id/eventIcon"
        app:layout_constraintEnd_toStartOf="@id/eventTime"
        tools:text="Новый контакт с приютом «Снежа»" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:45"
        android:textSize="11sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toTopOf="@id/eventTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Сегодня, 12:45" />

    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="У вас новый контакт с приютом «Снежа»."
        android:textSize="13sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/eventTitle"
        app:layout_constraintTop_toBottomOf="@id/eventTitle"
        app:layout_constraintEnd_toStartOf="@id/eventUnreadDot"
        tools:text="У вас новый контакт с приютом «Снежа». Вы можете начать переписку." />

    <View
        android:id="@+id/eventUnreadDot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_badge"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/eventTitle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
