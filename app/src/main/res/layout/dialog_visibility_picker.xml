<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/visibilityPickerRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/visibilityPickerSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_settings_visibility_subtitle"
        android:textSize="14sp"
        android:alpha="0.8"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:id="@+id/visibilityOptionEveryone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/bg_option_card"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visibilityEveryoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_visibility_everyone_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/visibilityEveryoneDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_visibility_everyone_desc"
                android:textSize="13sp"
                android:alpha="0.8"
                android:paddingTop="4dp" />
        </LinearLayout>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/visibilityEveryoneRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/visibilityOptionMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/bg_option_card"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visibilityMatchesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_visibility_matches_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/visibilityMatchesDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_visibility_matches_desc"
                android:textSize="13sp"
                android:alpha="0.8"
                android:paddingTop="4dp" />
        </LinearLayout>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/visibilityMatchesRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/visibilityOptionNone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/bg_option_card_danger"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visibilityNoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_visibility_none_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/visibilityNoneDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_visibility_none_desc"
                android:textSize="13sp"
                android:alpha="0.8"
                android:paddingTop="4dp" />
        </LinearLayout>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/visibilityNoneRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
